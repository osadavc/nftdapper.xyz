generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  Project       Project[]
}

model Project {
  id          String @id @default(cuid())
  name        String @unique
  description String
  owner       User   @relation(fields: [ownerId], references: [id])
  ownerId     String
  chaindId    Chain
}

enum Chain {
  CHAIN1
  CHAIN137
  CHAIN4
  CHAIN80001
}
