generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  Project       Project[]
}

model Project {
  id            String          @id @default(cuid())
  name          String          @unique
  description   String?
  owner         User            @relation(fields: [ownerId], references: [id])
  ownerId       String
  chainId       Chain
  SmartContract SmartContract[]
}

enum Chain {
  CHAIN1
  CHAIN137
  CHAIN4
  CHAIN80001
}

model SmartContract {
  id              String                  @id @default(cuid())
  project         Project                 @relation(fields: [projectId], references: [id])
  projectId       String
  contractAddress String
  abi             String
  features        SmartContractFeatures[]
}

model SmartContractFeatures {
  id              String        @id @default(cuid())
  smartContract   SmartContract @relation(fields: [smartContractId], references: [id])
  smartContractId String

  delayedReveal    Boolean
  pausable         Boolean
  saleStartingTime Boolean
  mintMultiple     Boolean
  paidMint         Boolean
  maxMintCount     Boolean
}
