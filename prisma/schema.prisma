generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  Project       Project[]
}

model Project {
  id              String         @id @default(cuid())
  name            String
  description     String?
  owner           User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId         String
  chainId         Chain
  smartContract   SmartContract? @relation(fields: [smartContractId], references: [id], onDelete: Cascade)
  smartContractId String?
}

enum Chain {
  CHAIN1
  CHAIN137
  CHAIN4
  CHAIN80001
}

model SmartContract {
  id               String                  @id @default(cuid())
  contractAddress  String?
  abi              String?
  features         SmartContractFeatures[]
  Project          Project[]
  saleStartingTime String?
  mintFee          Float?
  maxMintAmount    Int?
}

model SmartContractFeatures {
  id              String        @id @default(cuid())
  smartContract   SmartContract @relation(fields: [smartContractId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  smartContractId String

  delayedReveal    Boolean
  pausable         Boolean
  saleStartingTime Boolean
  mintMultiple     Boolean
  paidMint         Boolean
}
