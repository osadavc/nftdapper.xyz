generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  Project       Project[]
}

model Project {
  id              String         @id @default(cuid())
  name            String         @unique
  description     String?
  owner           User           @relation(fields: [ownerId], references: [id])
  ownerId         String
  chainId         Chain
  smartContract   SmartContract? @relation(fields: [smartContractId], references: [id])
  smartContractId String?
}

enum Chain {
  CHAIN1
  CHAIN137
  CHAIN4
  CHAIN80001
}

model SmartContract {
  id              String                  @id @default(cuid())
  contractAddress String?
  abi             String?
  features        SmartContractFeatures[]
  Project         Project[]
}

model SmartContractFeatures {
  id              String        @id @default(cuid())
  smartContract   SmartContract @relation(fields: [smartContractId], references: [id])
  smartContractId String

  delayedReveal    Boolean
  pausable         Boolean
  saleStartingTime Boolean
  mintMultiple     Boolean
  paidMint         Boolean
}
